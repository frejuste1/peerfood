<div class="card mb-4">
    <div class="card-body">
        <div class="orders-filters">
            <div class="search-box">
                <input type="text" class="form-control" placeholder="Rechercher un plat...">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24">
                    <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
                </svg>
            </div>
            <div class="filters-group">
                <select class="form-select" data-filter="status">
                    <option value="">Statut</option>
                    <option value="disponible">disponible</option>
                    <option value="rupture">En Rupture</option>
                </select>
                <button class="btn" data-action="reset-filters">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24">
                        <path d="M17.65 6.35C16.2 4.9 14.21 4 12 4c-4.42 0-7.99 3.58-7.99 8s3.57 8 7.99 8c3.73 0 6.84-2.55 7.73-6h-2.08c-.82 2.33-3.04 4-5.65 4-3.31 0-6-2.69-6-6s2.69-6 6-6c1.66 0 3.14.69 4.22 1.78L13 11h7V4l-2.35 2.35z"/>
                    </svg>
                    RÃ©initialiser
                </button>
            </div>
            <div class="header-actions">
                <button class="btn btn-primary" data-action="add-plat">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24">
                        <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
                    </svg>
                    Nouveau 
                </button>
                <button class="btn btn-outline-secondary btn-with-icon" data-action="export-excel">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24">
                        <path d="M14 2H6c-1.1 0-2 .9-2 2v16c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V8l-6-6zm-2 16H8v-2h4v2zm6-4H8v-2h10v2zm0-4H8V8h10v2z"/>
                    </svg>
                    <span>Exporter</span>
                </button>
            </div>
        </div>   
    </div>
</div>
<div class="card mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            <input type="checkbox" class="form-check-input" id="selectAll">
                        </th>
                        <th>ID</th>
                        <th>Image</th>
                        <th>Nom</th>
                        <th>Price</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% meals.forEach( (plat) => { %>
                        <tr>
                            <td>
                                <input type="checkbox" class="form-check-input" id="select-<%= plat.platId %>">
                            </td>
                            <td id="id"><%= plat.platId %></td>
                            <td id="image"><img style="width: 40px; height: auto; border-radius: 50%;" src="<%= plat.imagePath %>" alt="<%= plat.platName %>"></td>
                            <td id="name"><%= plat.platName %></td>
                            <td id="price"><%= plat.price %></td>
                            <td id="status">
                                <% if(plat.availability === 1) {%>
                                    <span class="badge success">
                                        Disponible
                                    </span>
                                <% } else { %>
                                     <span class="badge danger">
                                        En Rupture
                                    </span>
                                <% } %></td>
                            </td>
                            <td>
                                <div class="actions">
                                    <button class="btn btn-sm btn-icon" data-action="edit" title="Modifier">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24">
                                            <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/>
                                        </svg>
                                    </button>
                                    <button class="btn btn-sm btn-icon text-danger" data-action="delete" title="Supprimer">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24">
                                            <path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"/>
                                        </svg>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    <% })%>
                </tbody>
            </table>
        </div>
    </div>
</div>