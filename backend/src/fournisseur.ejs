<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestion des Clients</title>
    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="/css/theme.css">
</head>
<body>
    <%- include("./Components/loader.ejs") %>
    <div class="app-container">
        <%- include("./Components/sidebare.ejs") %>
        <div class="page-wrapper">
            <%- include("./Components/navbar.ejs") %>
            <div class="page-breadcrumb">
                <%- include("./Components/breadcrumb.ejs") %>
            </div>
            
            <div class="container-fluid">
                <!-- En-tête avec actions -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="clients-header">
                            <div class="header-title">
                                <h4>Gestion des Fournisseurs</h4>
                                <p class="text-muted">Gérez votre base fournisseur</p>
                            </div>
                            <div class="header-actions">
                                <button class="btn btn-primary" data-action="add-supplier">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24">
                                        <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
                                    </svg>
                                    Nouveau Fournisseur
                                </button>
                                <button class="btn btn-outline-primary" data-action="import">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24">
                                        <path d="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z"/>
                                    </svg>
                                    Importer
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Filtres et recherche -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="clients-filters">
                                    <div class="search-box">
                                        <input type="text" class="form-control" placeholder="Rechercher un client...">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24">
                                            <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
                                        </svg>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Liste des clients -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>
                                                    <input type="checkbox" class="form-check-input" id="selectAll">
                                                </th>
                                                <th>ID</th>
                                                <th>Nom</th>
                                                <th>Téléphone</th>
                                                <th>Adresse</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody id="suppliersList">
                                            <% for(let supplier of suppliers) { %>
                                            <tr>
                                                <td>
                                                    <input type="checkbox" class="form-check-input">
                                                </td>
                                                <td class="id">#<%= supplier.supplierId %></td>
                                                <td class="name"><%= supplier.supplierName %></td>
                                                <td class="phone"><%= supplier.phone %></td>
                                                <td class="adresse"> <%= supplier.address%> </td>
                                                <td>
                                                    <div class="actions">
                                                        <button class="btn btn-sm btn-icon" data-action="edit" title="Modifier">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24">
                                                                <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/>
                                                            </svg>
                                                        </button>
                                                        <button class="btn btn-sm btn-icon text-danger" data-action="delete" title="Supprimer">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24">
                                                                <path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"/>
                                                            </svg>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Pagination -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="pagination-wrapper">
                            <div class="pagination-info">
                                Affichage de 1-10 sur 100 clients
                            </div>
                            <ul class="pagination">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1">Précédent</a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#">Suivant</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Footer -->
                <div class="row mt-4">
                    <div class="col-12">
                        <%- include("./Components/footer.ejs") %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Nouveau Fournisseur -->
    <div class="modal" id="newSupplierModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5><span class="modal-title">Nouveau Fournisseur</span></h5>
                    <button type="button" class="modal-close" data-dismiss="modal">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                            <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
                        </svg>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="newSupplierForm">
                        <div class="form-group">
                            <label for="supplierName">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24">
                                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                                </svg>
                                Nom
                            </label>
                            <input type="text" id="supplierName" class="form-control" required placeholder="Ex: Jean Dupont"
                                   pattern="^[a-zA-ZÀ-ÿ]+(?: [a-zA-ZÀ-ÿ]+)*$">
                            <div class="validation-message">Le nom doit contenir uniquement des lettres et espaces</div>
                        </div>
                        <div class="form-group">
                            <label for="phone">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24">
                                    <path d="M6.62 10.79c1.44 2.83 3.76 5.15 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
                                </svg>
                                Téléphone
                            </label>
                            <input type="tel" id="phone" class="form-control" required placeholder="Ex: 06 12 34 56 78"
                                   pattern="^(?:(?:\+|00)33|0)\s*[1-9](?:[\s.-]*\d{2}){4}$">
                            <div class="validation-message">Format invalide (ex: 06 12 34 56 78)</div>
                        </div>
                        <div class="form-group">
                            <label for="address">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24">
                                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                                </svg>
                                Adresse
                            </label>
                            <input type="text" id="address" class="form-control" required placeholder="Ex: Jean Dupont"
                                   pattern="^[a-zA-Z0-9\s,'-]*$">
                            <div class="validation-message">L'adresse doit contenir uniquement des lettres et espaces</div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <button type="button" class="btn btn-primary" id="saveSupplier">
                        <span class="button-text">Enregistrer</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Edit Fournisseur -->
     <div class="modal" id="editSupplierModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5><span class="modal-title">Modifier le fournisseur</span></h5>
                    <button type="button" class="modal-close" data-dismiss="modal">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                            <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
                        </svg>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="editSupplierForm">
                        <div class="form-group">
                            <label for="editSupplierName">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24">
                                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                                </svg>
                                Nom
                            </label>
                            <input type="text" id="editSupplierName" class="form-control" required placeholder="Ex: Jean Dupont"
                                   pattern="^[a-zA-ZÀ-ÿ]+(?: [a-zA-ZÀ-ÿ]+)*$">
                            <div class="validation-message">Le nom doit contenir uniquement des lettres et espaces</div>
                        </div>
                        <div class="form-group">
                            <label for="editPhone">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24">
                                    <path d="M6.62 10.79c1.44 2.83 3.76 5.15 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
                                </svg>
                                Téléphone
                            </label>
                            <input type="tel" id="editPhone" class="form-control" required placeholder="Ex: 06 12 34 56 78"
                                   pattern="^(?:(?:\+|00)33|0)\s*[1-9](?:[\s.-]*\d{2}){4}$">
                            <div class="validation-message">Format invalide (ex: 06 12 34 56 78)</div>
                        </div>
                        <div class="form-group">
                            <label for="editAddress">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24">
                                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                                </svg>
                                Adresse
                            </label>
                            <input type="text" id="editAddress" class="form-control" required placeholder="Ex: Jean Dupont"
                                   pattern="^[a-zA-Z0-9\s,'-]*$">
                            <div class="validation-message">L'adresse doit contenir uniquement des lettres et espaces</div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <button type="button" class="btn btn-primary" id="editSupplier">
                        <span class="button-text">Enregistrer</span>
                    </button>
                </div>
            </div>
        </div>
     </div>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="/Js/theme.js"></script>
    <script src="/Js/supplier.js"></script>
    <script src="/Js/loader.js"></script>
</body>
</html>