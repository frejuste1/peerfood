# Configuration de la base de données
DB_HOST=localhost
DB_PORT=3306
DB_NAME=peerfood
DB_USER=root
DB_PASSWORD=your_password

# Configuration JWT
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters
JWT_EXPIRES_IN=7d

# Configuration du serveur
PORT=8086
NODE_ENV=development
APP_PORT=8086
SESSION_SECRET=your_session_secret_key_here

# Configuration des uploads
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# URLs de l'application
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8086

# Configuration MTN Mobile Money
MTN_MOMO_API_URL=https://sandbox.momodeveloper.mtn.com
MTN_MOMO_API_KEY=your_mtn_api_key
MTN_MOMO_SUBSCRIPTION_KEY=your_mtn_subscription_key
MTN_ENVIRONMENT=sandbox

# Configuration Orange Money
ORANGE_MONEY_API_URL=https://api.orange.com
ORANGE_MONEY_API_KEY=your_orange_api_key
ORANGE_MONEY_MERCHANT_ID=your_orange_merchant_id

# Configuration Wave
WAVE_API_URL=https://api.wave.com/v1
WAVE_API_KEY=your_wave_api_key

# Configuration des logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuration de sécurité
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuration CORS
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true